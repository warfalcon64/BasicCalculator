# Custom button
<CustButton@Button>:
    font_size: 32

# Define id to refer back to the CalcGridLayout in main file
<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False
    # Row 1
    BoxLayout:
        spacing: 10
        CustButton:
            text: "7"
            on_press: entry.text += self.text

        CustButton:
            text: "8"
            on_press: entry.text += self.text

        CustButton:
            text: "9"
            on_press: entry.text += self.text

        CustButton:
            text: "+"
            on_press: entry.text += self.text
    # Row 2
    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: entry.text += self.text

        CustButton:
            text: "5"
            on_press: entry.text += self.text

        CustButton:
            text: "6"
            on_press: entry.text += self.text

        CustButton:
            text: "-"
            on_press: entry.text += self.text
    # Row 3
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: entry.text += self.text

        CustButton:
            text: "2"
            on_press: entry.text += self.text

        CustButton:
            text: "3"
            on_press: entry.text += self.text

        CustButton:
            text: "*"
            on_press: entry.text += self.text
    # Row 4
    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: entry.text = ""

        CustButton:
            text: "0"
            on_press: entry.text += self.text

        CustButton:
            text: "="
            on_press: calculator.calculate(entry.text)

        CustButton:
            text: "/"
            on_press: entry.text += self.text
    # Big Useless Button         
    BoxLayout:
        CustButton:
            font_size: 20
            text: "Scientific Calculator"
            on_press: entry.text = ""